<!DOCTYPE html>
<html>
  <head>
    <title>BootstrapTest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="navbar navbar-fixed-top navbar-inverse">
    	
    		<div class="container">
          <nav class="nav navbar-nav navbar-left navbar-light">
              <span>Bookers</span>
          </nav>

            
               <ul class="nav navbar-nav navbar-right">
    	          <% if user_signed_in? %>
                    <li class="nav-item glyphicon glyphicon-home">
                      <%=link_to "Home", user_path(current_user) %>
                    </li>
                    <li class="nav-item glyphicon glyphicon-user">
                      <%=link_to "Users", users_path %>
                    </li>
                    <li class="nav-item glyphicon glyphicon-book">
                      <%=link_to "Books",books_path %>
                    </li>
                    <li class="nav-item glyphicon glyphicon-log-out">
                      <%=link_to "logout",destroy_user_session_path,method: :delete %>
                    </li>
                <% else %>
                    <li class="nav-item glyphicon glyphicon-home">
                      <%=link_to "Home", root_path %>
                    </li>
                    <li class="nav-item glyphicon glyphicon-link">
                      <%=link_to "About", '/home/about' %>
                    </li>
                    <li class="nav-item glyphicon glyphicon-edit">
                      <%=link_to "sign up",new_user_registration_path %>
                    </li>
                    <li class="nav-item glyphicon glyphicon-log-in">
                      <%=link_to "login",new_user_session_path %>
                    </li>
                <% end %>
               </ul>
                         
        </div>
      
    </header>

    <div class="container">

        <br>
        <br>
        <br>

        <%= yield %>
    </div>

      

          <footer>
            <div class="col-xs-3 col-xs-offset-9">
              copyright infratop.inc
            </div>
          </footer>
    
  </body>
</html>
